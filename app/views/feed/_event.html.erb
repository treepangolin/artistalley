<div class="row mb-4">
  <div class="col-3 col-sm-2">
    <% if owner.avatar %>
      <%= image_tag owner.avatar(:small).url, class: 'rounded-circle profile-avatar img-fluid' %>
    <% else %>
      <i class="fas fa-paw no-avatar__large profile-avatar card-img-top"></i>
    <% end %>
  </div>

  <div class="col">
    <div class="card bg-dark">
      <div class="card-header d-flex flex-wrap justify-content-between align-items-center">
        <div class="d-flex flex-row align-items-center">
          <span class="text-muted">
            <%= link_to owner.username, owner %>
            <%= action %>
            <%= link_to object.title, object if object.title %>
          </span>
        </div>

        <small class="text-muted">
          <% if activity.created_at < 7.days.ago %>
            <%= activity.created_at.strftime("#{activity.created_at.day.ordinalize} of %B, %Y") %>
          <% else %>
            <%= time_ago_in_words(activity.created_at) + ' ago' %>
          <% end %>
        </small>
      </div>

      <div class="card-body p-0 p-md-2 <%= 'text-center' if object.image %>">
        <% if object.image %>
          <%= link_to object do %>
            <%= image_tag object.image(:medium).url, class: 'rounded-3 img-fluid' %>
          <% end %>
        <% else %>
          <div class="p-3 p-md-2 markdown-body">
            <%= markdown(object.body) if object.body %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>