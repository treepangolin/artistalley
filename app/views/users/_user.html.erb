<div class="card bg-dark mb-2 rounded-3">
  <div class="card-body d-flex justify-content-between align-items-center">
    <div class="d-flex flex-row align-items-center">
      <% if user.avatar %>
        <%= image_tag user.avatar(:scaled).url, width: 48, height: 48, class: 'rounded-circle me-3' %>
      <% else %>
        <i class="fas fa-paw no-avatar__small me-3"></i>
      <% end %>

      <h6 class="mb-0">
        <%= link_to user.username, user, class: 'link-light stretched-link' %>
      </h6>
    </div>
  </div>
</div>