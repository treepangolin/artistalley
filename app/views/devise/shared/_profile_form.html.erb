<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, id: dom_id(resource)) do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>Username</h2>

  <div class="form-floating">
    <%= form.text_field :username, autocomplete: 'username', class: 'form-control bg-dark border-dark text-white', placeholder: 'Username' %>
    <%= form.label :username, 'Username' %>

    <div class="form-text" id="usernameHelp">
      <ul>
        <li>Username changes are free and unlimited</li>
        <li>There is no name history; handles are freed after being changed</li>
        <li>Changing your username changes your profile URL</li>
      </ul>
    </div>
  </div>

  <h2 class="mt-2">Avatar</h2>

  <%= form.hidden_field :avatar, value: resource.cached_avatar_data %>
  <%= form.file_field :avatar, accept: 'image/png,image/jpeg,image/gif,image/tiff,image/webp', class: 'form-control bg-dark border-dark text-white' %>

  <%= render 'devise/shared/submit_edit', form: form %>
<% end %>