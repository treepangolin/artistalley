<div id="error_explanation">
  <% if resource.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Couldn't submit changes.</h4>

      <ul class="mb-0">
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
