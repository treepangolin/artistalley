<% content_for :content do %>
  <div class="row">
    <%= render 'user_card' %>

    <!-- Profile content -->
    <div class="col-xl-9 col-md-8 col-sm-12">
      <div class="dropdown">
        <a href="#" class="dropdown-toggle dropdown-h1 text-decoration-none link-light" id="headerNavDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <h1 class="d-inline"><%= @header %></h1>
        </a>

        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="headerNavDropdown">
          <li><%= link_to 'Wall', user_path(@user), class: "dropdown-item #{nav_active(user_path(@user))}" %></li>
          <li><%= link_to 'Liked Posts', user_likes_path(@user), class: "dropdown-item #{nav_active(user_likes_path(@user))}" %></li>
        </ul>
      </div>

      <%= yield %>
    </div>
    <!-- End profile content -->

    <%# Include Edit Profile modal if user can edit this profile %>
    <%= render 'edit_profile_modal' if @user == current_user %>
  </div>
<% end %>

<%= render template: 'layouts/application' %>