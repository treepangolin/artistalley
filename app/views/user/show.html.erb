<div class="row">
  <div class="col-xl-3 col-md-4 col-sm-12">
    <div class="card bg-dark text-center" style="margin-top: 128px">
      <div class="card-body" style="margin-top: -128px">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar.variant(resize_to_limit: [256, 256]), class: 'rounded-circle profile-avatar' %>
        <% else %>
          <i class="bi-question no-avatar__large card-img-top"></i>
        <% end %>

        <h2 class="card-title"><%= @user.username %></h2>
        <% unless @user.location.blank? %>
          <h6 class="card-subtitle text-muted mb-2">
            <i class="bi-geo-alt-fill"></i>&nbsp;<%= @user.location %>
          </h6>
        <% end %>

        <% unless @user.bio.blank? %>
          <p class="card-text"><%= @user.bio %></p>
        <% end %>
      </div>

      <% if @user == current_user %>
        <div class="card-footer">
          <%= link_to '#', class: 'btn btn-primary rounded-pill', data: { 'bs-toggle': 'modal', 'bs-target': '#editProfileModal' } do %>
            <i class="bi-pencil"></i>&nbsp;Edit
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-xl-9 col-md-8 col-sm-12">
    <%= render @user.posts %>
  </div>

  <%= render 'edit_modal' if @user == current_user %>
</div>